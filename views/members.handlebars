{{#if isAdmin}}
<div class="row">
<a href="/admin/products"  class="fas fa-folder-plus btn btn-primary btn-lg" style="font-size: 2em; margin-bottom:15px ;margin-left: 5px;"> Add Product</a>
</div>
{{/if}}

{{#each items}}
<a href="/item/{{this.id}}" class="card-link" id="{{this.id}}">
    <div class="card border-dark  col-sm-12 col-md-3 float-left mb-3 mx-3" style="max-width: 20rem;">
        <div class="card-header" name="item-header"  >{{this.item_header}}</div>
        <div class="card-body">
            <img src="{{this.img_url}}" class="card-img-top" alt="{{this.img_url}}"  width="246px" height="303.7px" >
            {{!-- <h4 class="card-title" name="item-title">Item title</h4> --}}
            <p class="card-text" name="item-explanation"> Details : {{this.item_explanation}}</p>
            <p class="card-text" name="item-price">Price $ {{this.item_price}}</p>
        </div>
    </div>
</a>
{{/each}}


<script>

    $('.login').addClass('hide');
    $('.signup').addClass('hide');
    $('.logOut').addClass('show');
    $('.userMessage').addClass('show');

    
</script>